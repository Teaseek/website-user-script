{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": ".",
        "resolveJsonModule": true,
        "typeRoots": [
            "@types",
        ]
    },
    "include": [
        "@types/**/*.d.ts",
        "src/**/*.ts",
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}